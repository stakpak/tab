{
  "name": "@tab/daemon",
  "version": "0.1.0",
  "description": "tab daemon",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/daemon.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:pkg": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/daemon.js --format=cjs",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.ts tests/e2e"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^2.1.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
