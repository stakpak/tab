{
  "name": "browser-daemon",
  "version": "0.1.8",
  "description": "Browser automation daemon - WebSocket and IPC server for controlling browsers",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "browser-daemon": "dist/daemon.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:pkg": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/daemon.js --format=cjs",
    "build:bin": "npm run build:pkg && pkg . --out-path=bin/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.ts tests/e2e",
    "version": "node -p \"require('./package.json').version\""
  },
  "pkg": {
    "scripts": [
      "dist/daemon.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "bin/"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^2.1.0",
    "esbuild": "^0.27.2",
    "pkg": "^5.8.1",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stakpak/agent.git",
    "directory": "daemon"
  },
  "keywords": [
    "stakpak",
    "agent",
    "browser",
    "automation",
    "daemon",
    "websocket"
  ],
  "author": "Stakpak Team",
  "license": "MIT"
}
